header.app-header
  app-header

section.app-main
  .container.margin-v
    form.layout-row.layout-wrap.layout-margin(ng-submit='save()', novalidate='novalidate', name='form', ng-controller='NewCommunityCtrl')
      .communities__item.flex
        .community
          .control__group
            label.control__label Химический элемент
            input(ng-model='community.elem', type="text", class="control__input")
            .control__hint Например : Rb
            .control__error(ng-if="hasError('elem')", ng-repeat="error in errors['elem']") {{ error }}

      .flex.communities__item--top-padding
        .control__group
          .control__error(ng-if="hasError('base')", ng-repeat="error in errors['base']") {{ error }}

        .control__group
          label.control__label Полное название сообщества
          input(ng-model='community.name', type="text", class="control__input")
          .control__hint Например : Spb Ruby User Groups
          .control__error(ng-if="hasError('name')", ng-repeat="error in errors['name']") {{ error }}

        .control__group
          label.control__label Короткое название сообщества
          input(ng-model='community.short_name', type="text", class="control__input")
          .control__hint Например : SPRUG
          .control__error(ng-if="hasError('short_name')", ng-repeat="error in errors['short_name']") {{ error }}

        .control__group.error
          label.control__label Хэштэг
          input(ng-model='community.hashtag', type="text", class="control__input")
          .control__error(ng-if="hasError('hashtag')", ng-repeat="error in errors['hashtag']") {{ error }}

        .control__group
          label.control__label Описание
          textarea(ng-model='community.description', class="control__textarea")
          .control__error(ng-if="hasError('description')", ng-repeat="error in errors['description']") {{ error }}

        .control__group
          label.control__label Тэги
          input(type="text", class="control__input")
          .control__error(ng-if="hasError('tags')", ng-repeat="error in errors['tags']") {{ error }}

        .control__group
          button(class="button button-success") Сохранить

app-footer.app-footer