= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :date
    %br/
    = f.time_select :date
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :community_id
    %br/
    = f.number_field :community_id
  .field
    = f.label :location
    %br/
    = f.number_field :location
  .actions
    = f.submit
