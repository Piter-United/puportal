= form_for(@member) do |f|
  - if @member.errors.any?
    #error_explanation
      h2
        = pluralize(@member.errors.count, "error")
        | prohibited this member from being saved:
      ul
        - @member.errors.full_messages.each do |message|
          li= message
  .field
    = f.label :name
    br/
    = f.text_field :name
  .field
    = f.label :links
    br/
    = f.text_area :links
  .field
    = f.label :email
    br/
    = f.text_field :email
  .field
    = f.label :login
    br/
    = f.text_field :login
  .field
    = f.label :password
    br/
    = f.text_area :password
  .field
    = f.label :avatar
    br/
    = f.text_field :avatar
  .actions
    = f.submit
