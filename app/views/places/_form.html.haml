= form_for(@place) do |f|
  - if @place.errors.any?
    #error_explanation
      %h2
        = pluralize(@place.errors.count, "error")
        prohibited this place from being saved:
      %ul
        - @place.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :company_id
    %br/
    = f.number_field :company_id
  .field
    = f.label :photos
    %br/
    = f.text_area :photos
  .actions
    = f.submit
